{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "lib": ["esnext", "DOM"],
    "types": ["node"],
    "moduleResolution": "node",
    "target": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "removeComments": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
