{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2015"],
    "module": "commonjs",
    "target": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "removeComments": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
